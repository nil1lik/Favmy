@page "/wish-page"

<div class="container">
    <div class="row">
        <div class="col-sm mb-3">
            <h4 class="fw-bold fs-2">Add New Item</h4>
            
            <select class="form-select form-select-sm mb-3" aria-label="Default select example">
                <option selected>Categories</option>
                <option value="1">Electronics</option>
                <option value="2">Clothing</option>
                <option value="3">Cosmetics</option>
            </select>

            <div class="input-group input-group-sm mb-3">
                <input type="text" class="form-control" placeholder="Product Name" aria-label="Product Name">
            </div>

            <div class="input-group input-group-sm mb-3">
                <input type="text" class="form-control" placeholder="Url" aria-label="Product Url">
            </div>

            <div class="form-check mb-3">
                <input class="form-check-input" type="radio" name="Urgency" id="urgency">
                <label class="form-check-label" for="urgency">
                    Urgency
                </label>
            </div>

            <div class="text-end">
                <button type="button" class="btn btn-success btn-sm rounded">Add</button>
            </div>
        </div>
    </div>
</div>